<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="1._ ¿Cuántos Servicios técnicos o profesionales ha solicitado a domicilio?"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutPregunta1"
                android:layout_width="match_parent"
                app:errorEnabled="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_Pregunta1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Respuesta"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="2._ ¿Podría mencionarlos?"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutPregunta2"
                android:layout_width="match_parent"
                app:errorEnabled="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_Pregunta2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="3"
                    android:hint="Respuesta"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="3._ ¿Cuál es el servicio más solicitadoen en el mes?"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutPregunta3"
                android:layout_width="match_parent"
                app:errorEnabled="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_Pregunta3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="3"
                    android:hint="Respuesta"/>

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="4._ ¿Ustes ofrece servicio a domicilio?"/>

            <RadioGroup
                android:id="@+id/radioGrup"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:id="@+id/radioButtonSi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SI" />

                <RadioButton
                    android:id="@+id/radioButtonNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NO" />
            </RadioGroup>
            <LinearLayout
                android:id="@+id/LinearlayoutRespuesta4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="4.1 ¿Le gustaría promoverse y que le llamen las personas por un servicio que usted ofrezca?"/>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutPregunta4"
                    android:layout_width="match_parent"
                    app:errorEnabled="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_Pregunta4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="10"
                        android:hint="Número de télefono"/>

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="5._ ¿Qué red social utiliza?"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutPregunta5"
                android:layout_width="match_parent"
                app:errorEnabled="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_Pregunta5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="3"
                    android:hint="Respuesta"/>

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="6._ ¿Qué apliación de servicio a domicilio utiliza?"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutPregunta6"
                android:layout_width="match_parent"
                app:errorEnabled="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_Pregunta6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="3"
                    android:hint="Respuesta"/>

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="7._ ¿Cuál es su Edad?"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutPregunta7"
                android:layout_width="match_parent"
                app:errorEnabled="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_Pregunta7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:hint="Respuesta"/>

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="8._ ¿Usted Tiene casa propia?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:layout_margin="20dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutPregunta8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_Pregunta8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Respuesta"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="3" />


                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/buttonRegistrarFormulario"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:text="Registrar" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>